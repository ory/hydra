{
  "id": "bridg_admin",
  "description": "Allow Bridg admins full access to a set of Bridg's resources.",
  "subjects": [
    "bridg-admin"
  ],
  "effect": "allow",
  "resources": [
    "rn:bridg:<(accounts|brands|sites)(:.+)?>",
    "rn:bridg:<(roles|users|authenticate)(:.+)?>",
    "rn:bridg:<(audiences|audience-export-groups|campaigns|scheduler)(:.+)?>",
    "rn:bridg:<(snapshots|snapshot-fb-exports|snapshot-fb-export-facebook-accounts)(:.+)?>",
    "rn:bridg:<(analytics|integrations|integration-types)(:.+)?>",
    "rn:bridg:<(reveal-jobs|metrics)(:.+)?>"
  ],
  "actions": [
    "<.*>"
  ]
}
