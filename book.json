{
  "root": "./docs",
  "author": "Aeneas Rekkas",
  "gitbook": ">=3.2.0",
  "plugins": [
    "edit-link",
    "etoc",
    "bulk-redirect",
    "domain-redirect"
  ],
  "pluginsConfig": {
    "edit-link": {
      "base": "https://github.com/ory/hydra/tree/master/docs",
      "label": "Edit this page on GitHub"
    },
    "etoc": {
      "h2lb": 2,
      "mindepth": 2,
      "maxdepth": 5,
      "notoc": false
    },
    "domain-redirect": {
      "from": "ory.gitbooks1.io/hydra/content/",
      "to": "www.ory.sh/docs/1-hydra"
    },
    "bulk-redirect": {
      "basepath": "/hydra/content/",
      "redirectsFile": "redirects.json"
    }
  }
}

